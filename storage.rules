rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Allow images to be read by all authenticated users
    match /images/{imageId} {
      allow read: if request.auth != null;
      // Only admin can write/delete images
      allow write: if request.auth != null && request.auth.token.email == 'admin@example.com';
    }
    
    // Allow course materials to be read by authenticated users
    match /courses/{courseId}/{allPaths=**} {
      allow read: if request.auth != null;
      // Only admin can write/delete course materials
      allow write: if request.auth != null && request.auth.token.email == 'admin@example.com';
    }
    
    // Allow users to access their own submissions
    match /submissions/{userId}/{allPaths=**} {
      allow read: if request.auth != null && 
                  (request.auth.uid == userId || 
                   request.auth.token.email == 'admin@example.com');
      // Users can create their own submissions
      allow create: if request.auth != null && request.auth.uid == userId;
      // Only admin can delete submissions
      allow delete: if request.auth != null && request.auth.token.email == 'admin@example.com';
    }
  }
}
